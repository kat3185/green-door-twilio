<form action="/games" method="post">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="game[title]" value="<%= game.title %>">
  </div>

  <div>
    <label for="short_title">Short Title:</label>
    <input type="text" id="short_title" name="game[short_title]" value="<%= game.short_title %>">
  </div>

  <div>
    <label for="url">URL:</label>
    <input type="text" id="url" name="game[url]" value="<%= game.url %>">
  </div>

  <input type="submit" value="Submit Game">
</form>
